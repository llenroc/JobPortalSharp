@model IEnumerable<JobPortalSharp.Data.JobPost>

@{
    ViewBag.Title = "Index";
}

@if (Model.Count() > 0)
{
    <p>
        @Html.ActionLink("Post a new job", "Create", null, new { @class = "btn btn-primary" })
    </p>
    <table class="table table-striped table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EmploymentTypeId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IndustryId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SalaryRangeFrom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SalaryRangeTo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpirationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.EmploymentType.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Industry.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Salary)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SalaryRangeFrom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SalaryRangeTo)
                </td>
                <td>

                    @if (item.ExpirationDate.HasValue)
                    {
                        <span>@item.ExpirationDate.Value.ToString("yyyy-MM-dd")</span>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </table>
}
else
{
    <center>
        <p>You have no posts yet.</p>
        @Html.ActionLink("Post a new job", "Create", null, new { @class = "btn btn-primary" })
    </center>
}