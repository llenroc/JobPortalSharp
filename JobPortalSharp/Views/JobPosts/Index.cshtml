@model IEnumerable<JobPortalSharp.Data.Dto.JobPostDto>

@{
    ViewBag.Title = "Index";
}

@section FooterScripts {
    <script type="text/javascript">
        function viewApplications(btn) {
            var jobTitle = $(btn).closest('tr').find('job-title').text();
            $.ajax({
                type: 'GET',
                url: '/api/jobapplications',
                cache: false,
                success: function (data, status) {
                    $form = $('#modalApplications');
                    $form.find('.job-title').text(jobTitle);
                    $form.find('.modal-body').empty();
                    var html = '<div class="col-sm-6">Application Date</div><div class="col-sm-2">CV</div><div class="col-sm-2">CL</div>';
                    for (var i = 0; i < data.length; i++) {
                        html += '<div class="col-sm-6">' + data[i].ApplicationDate.substr(0, 10) + '</div><div class="col-sm-2"><a href="/files/getfile?file=' + data[i].CvSystemFileName + '" download>Download</a></div>' +
                            '<div class="col-sm-2">' + (data[i].CoverLetterSystemFileName == null ? 'None' : '<a class="btn btn-primary btn-sm" href="/files/getfile?file=' + data[i].CoverLetterSystemFileName + '" download>CL</a></div>');
                        $form.find('.modal-body').append(html);
                    }
                    $form.modal();
                },
                error: function (status) {

                }
            })
        }
    </script>
}

@if (Model.Count() > 0)
{
    <p>
        @Html.ActionLink("Post a new job", "Create", null, new { @class = "btn btn-primary" })
    </p>
    <table class="table table-striped table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmploymentTypeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IndustryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SalaryRangeFrom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SalaryRangeTo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpirationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumOfApplications)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td class="job-title">
                    @Html.ActionLink(item.Name, "Details", new { id = item.Id }, new { @style = "font-weight: bold" })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmploymentTypeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IndustryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Salary)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SalaryRangeFrom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SalaryRangeTo)
                </td>
                <td>
                    @if (item.ExpirationDate.HasValue)
                    {
                        <span>@item.ExpirationDate.Value.ToString("yyyy-MM-dd")</span>
                    }
                </td>
                <td>
                    @if (item.NumOfApplications > 0)
                    {
                        <span class="label label-primary label-as-badge" style="cursor: pointer" onclick="viewApplications(this)">
                            @Html.DisplayFor(modelItem => item.NumOfApplications)
                        </span>
                    }
                    else
                    {
                        <span>None</span>
                    }
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </table>
}
else
{
    <center>
        <p>You have no posts yet.</p>
        @Html.ActionLink("Post a new job", "Create", null, new { @class = "btn btn-primary" })
    </center>
}

<!-- Modal -->
<div class="modal fade" id="modalApplications" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Applications for <span class="job-title"></span></h4>
            </div>
            <div class="modal-body row">
                
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>