@model JobPortalSharp.Models.SettingsViewModel
@{
    ViewBag.Title = "Index";
}

@section StyleSheets  {
    <style>
        textarea {
            min-height: 200px;
        }
    </style>
}

<div class="container first-element">
    <div style="height: 50px"></div>
    @using (Html.BeginForm("SaveSettings", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="form-group">
            @Html.LabelFor(x => x.WebsiteTitle)
            @Html.TextBoxFor(x => x.WebsiteTitle, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.FooterText)
            @Html.TextBoxFor(x => x.FooterText, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.HomePageWelcomeMessage)
            @Html.TextBoxFor(x => x.HomePageWelcomeMessage, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.HomePageWelcomeMessageSubtext)
            @Html.TextAreaFor(x => x.HomePageWelcomeMessageSubtext, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.HomePageBottomText)
            @Html.TextAreaFor(x => x.HomePageBottomText, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.AboutText)
            @Html.TextAreaFor(x => x.AboutText, new { @class = "form-control" })
        </div>
        <div class="form-group">
                <input type="submit" class="btn btn-default" value="Save Settings" />
        </div>
    }
</div>